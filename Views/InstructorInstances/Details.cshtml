@model Learning_Outcomes.Models.InstructorInstances

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<head>
    <link rel="stylesheet" href="~/css/Learning_Outcomes.css" />
    <meta name="author" content="Caleb Edwards" />
    <meta name="description" content="This is the Department Chair's view of the learning outcomes" />
    <meta name="charset" content="" />
    <meta name="keywords" content="" />
    <meta charset="utf-8" />
</head>


<body id="HV_Body">
    <h2>Welcome Department Chair</h2>
    <div class="tables">
        <p>Click on Course ID:</p>
        <table id="ptable">
            <thead>
                <tr>
                    <th>
                        Course ID
                    </th>
                    <th>
                        Course Name
                    </th>
                    <th>
                        Course Description
                    </th>
                    <th>
                        % Complete
                    </th>
                    <th>
                        Department
                    </th>
                    <th>
                        Semester
                    </th>
                    <th>
                        Year
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Courses)
                {
                    <tr>
                        <td class="hv">
                            <a class="dropdown-item" asp-area="" asp-controller="CourseInstances" asp-action="Details" asp-route-id="@item.CourseInstancesID">
                                @Html.DisplayFor(modelItem => item.CourseInstancesID)
                            </a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CourseName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td class="hv">
                            <div class="progress">
                                <div class="progress-bar bg-warning" role="progressbar" style="width: 64%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">64%</div>
                            </div>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Dept)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Semester)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Year)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.CourseInstancesID">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.CourseInstancesID">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.CourseInstancesID">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.InstructorInstancesID">Edit</a> |
        <a asp-controller="InstructorInstances" asp-action="Index">Back to List</a>
    </div>
</body>

