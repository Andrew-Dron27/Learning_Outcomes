@model IEnumerable<Learning_Outcomes.Models.CourseInstances>

@{
    ViewData["Title"] = "Index";
}

<head>
    <link rel="stylesheet" href="~/css/Learning_Outcomes.css" />
    <meta name="author" content="Caleb Edwards" />
    <meta name="description" content="This is the Department Chair's view of the learning outcomes" />
    <meta name="charset" content="" />
    <meta name="keywords" content="" />
    <meta charset="utf-8" />
</head>

@section Scripts{ 
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
}

<body id="HV_Body">
    <h2>Welcome Department Chair</h2>
    <div class="table-responsive">
        <p>Click on Course ID:</p>
        <table class="table table-striped">
            <thead class="bg-secondary">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CourseInstancesID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CourseName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        % Complete
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Dept)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Semester)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Year)
                    </th>
                    <th>
                        Instructor ID
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="hv">
                            <a class="dropdown-item" asp-area="" asp-controller="CourseInstances" asp-action="InstrAndChairLOView" asp-route-id="@item.CourseInstancesID">
                                @Html.DisplayFor(modelItem => item.CourseInstancesID)
                            </a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CourseName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td class="hv">
                            <div class="progress">
                                <div class="progress-bar bg-warning" role="progressbar" style="width: @item.Completion%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">@item.Completion%</div>
                            </div>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Dept)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Semester)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Year)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.InstructorInstancesID)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
